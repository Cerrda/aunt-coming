{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@vue/shared": ["./node_modules/@vue/shared"]
    }
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "configs/**/*", "types/**/*"],
  "exclude": ["src/**/__tests__/*"]
}
